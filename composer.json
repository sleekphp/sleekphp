{
  "name": "sleekphp/sleekphp",
  "description": "A lightweight beginner-friendly PHP framework using MVC and a simple ORM",
  "keywords": [
    "framework",
    "php",
    "mvc",
    "orm",
    "sleekphp"
  ],
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Arafat Hossain",
      "email": "arafat.122260@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "System\\": "system/",
      "Database\\": "database/"
    },
    "classmap": [
      "routes/",
      "config/"
    ]
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
